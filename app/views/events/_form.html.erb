<%= bootstrap_form_for(event, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :title %>

    <%= f.text_field :location %>

    <%= f.datetime_select :start %>

    <%= f.datetime_select :end %>

    <%= f.collection_select :poc, Admin.event_coordinators, :id, :display_name, {prompt: "Select a POC..."} %>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.check_box :published %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.primary %>
      <%= link_to "Back", events_url, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
