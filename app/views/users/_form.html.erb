<%= bootstrap_form_for(user, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>
  <%= f.number_field :aclx_id %>  
  <%= f.text_field :forum_name %>
  <%= f.text_field :full_name %>
  <%= f.email_field :email %>
  <%= f.text_field :vehicle_desc %>
  <%= f.date_select :date_joined %>  
  <%= f.text_area :comments %>
  <%= f.date_select :last_activity %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.check_box :id_issued %>
      <%= f.check_box :has_facebook %>
      <%= f.check_box :is_leadership %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.primary "Update" %>
      <%= link_to "Back", users_path, class: "btn btn-default" %>
    </div>
  </div>  
<% end %>
