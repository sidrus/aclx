<div class="container">
<dl class="dl-horizontal">
  <dt>Id:</dt>
  <dd><%= @user.aclx_id %></dd>

  <dt>Id Issued:</dt>
  <dd><%= @user.id_issued %></dd>

  <dt>Forum name:</dt>
  <dd><%= @user.forum_name %></dd>

  <dt>Full name:</dt>
  <dd><%= @user.full_name %></dd>

  <dt>Email:</dt>
  <dd><%= @user.email %></dd>

  <dt>Vehicle desc:</dt>
  <dd><%= @user.vehicle_desc %></dd>

  <dt>Date joined:</dt>
  <dd><%= @user.date_joined %></dd>

  <dt>Has facebook:</dt>
  <dd><%= @user.has_facebook %></dd>

  <dt>Comments:</dt>
  <dd><%= @user.comments %></dd>

  <dt>Last activity:</dt>
  <dd><%= @user.last_activity %></dd>
</dl>

<div class="row text-center">
  <%= link_to 'Delete', user_path(@user), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-default" %>
  <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-default" %>
  <%= link_to 'Back', users_path, class: "btn btn-default" %>
</div>
</div>