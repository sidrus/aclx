<div class="container">
<h2>Sign up</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="">
    <%= f.email_field :email, autofocus: true, icon: "user" %>

    <% if @minimum_password_length %>
      <%= f.password_field :password, autocomplete: "off", icon: "lock", help: "Must be at least #{@minimum_password_length} characters long." %>
    <% else %>
      <%= f.password_field :password, autocomplete: "off", icon: "lock" %>
    <% end %>

    <%= f.password_field :password_confirmation, autocomplete: "off", icon: "lock" %>
    <%= f.primary "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>